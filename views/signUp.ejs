<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title></title>
  </head>
  <body>
    <h1>Sign Up</h1>
    <form action="/signUp" method="POST">
      <label for="username">Username *</label>
      <input
        name="username"
        id="username"
        type="text"
        value="<%= username ? username : '' %>" />
      <% if (errors.usernameError && errors.usernameError.length > 0) { %>
      <ul>
        <% errors.usernameError.forEach(errorMsg => { %>
        <li><%= errorMsg %></li>
        <% }); %>
      </ul>
      <% } %>
      <label for="password">Password *</label>
      <input name="password" id="password" type="password" />
      <% if (errors.passwordError && errors.passwordError.length > 0) { %>
      <ul>
        <% errors.passwordError.forEach(errorMsg => { %>
        <li><%= errorMsg %></li>
        <% }); %>
      </ul>
      <% } %>
      <label for="confirmPassword">Confirm Password *</label>
      <input name="confirmPassword" id="confirmPassword" type="password" />
      <% if (errors.confirmPasswordError && errors.confirmPasswordError.length >
      0) { %>
      <ul>
        <% errors.confirmPasswordError.forEach(errorMsg => { %>
        <li><%= errorMsg %></li>
        <% }); %>
      </ul>
      <% } %>
      <button>Sign Up</button>
    </form>
  </body>
</html>
